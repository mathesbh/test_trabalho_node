<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card m-5 p-3">
                <div class="card-title text-center p-2">
                {{#if deslogado}}
                    <div class="alert alert-success">
                        <strong>Deslogado com sucesso, até mais ;)</strong>
                    </div>
                {{/if}}
                {{#if cadastrado}}
                    <div class="alert alert-success">
                        <strong>Olá {{nome}}, cadastro realizado com sucesso!</strong>
                    </div>
                {{/if}}
                {{#if acesso}}
                    <div class="alert alert-danger">
                        <strong>Usuário precisa fazer login!</strong>
                    </div>
                {{/if}}
                {{#if errLogin}}
                    <div class="alert alert-danger">
                        <strong>Email ou senha incorretos!</strong>
                    </div>
                {{/if}}
                    <i class="far fa-user-circle fa-5x"></i>
                </div>
                <form action="/autenticar" method="POST">
                    <div class="form-group">
                    {{#if email}}
                        <input name="email" type="text" class="form-control" placeholder="Email" value="{{emailUser}}" required>
                    {{else}}
                        <input name="email" type="text" class="form-control" placeholder="Email" required>
                    {{/if}}
                    </div>
                    <div class="form-group">
                        <input name="senha" type="password" class="form-control" placeholder="Senha" required>
                    </div>
                    <button type="submit" class="btn btn-success">Entrar</button>
                    <a href="/cadastro"><button type="button" class="btn btn-info">Cadastre-se</button></a>       
                </form>
            </div>
        </div>
    </div>
</div>
