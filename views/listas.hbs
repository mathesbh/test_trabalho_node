<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div>
                <h3>Listas para tarefas:</h3>                
            </div>
            {{#each result}}
                <div class="card mx-auto pt-2" style="width: 22rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.nomeList}}</h5>
                        <p class="card-text">{{this.descricaoList}}</p>
                        <a href="/tarefas/{{this.nomeList}}" class="card-link">Acessar lista</a>
                        <a href="/listas/deletarLista/{{this.nomeList}}" class="card-link">Remover</a>
                    </div>
                </div>
            {{/each}}
        </div>
        <div class="col-md-4">
            <div>
                <form class="mx-auto pt-4" action="/listas/criarList" method="POST" style="width: 18rem;">
                    <h6>Criar lista</h6>
                    <div class="form-group">
                        <label for="nomeList">Nome da lista:</label>
                        <input type="text" class="form-control" id="nomeList" name="nomeList">
                    </div>
                    <div class="form-group">
                        <label for="descricaoList">Descrição da lista:</label>
                        <input type="text" class="form-control" id="descricaoList" name="descricaoList">
                    </div>
                    <button type="submit" class="btn btn-primary">Criar lista</button>
                </form>
            </div>
        </div>
    </div>
</div>